{
  "name": "testgrid-index",
  "description": "Webcomponent testgrid-index following open-wc recommendations",
  "license": "Apache-2.0",
  "author": "testgrid-index",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext .ts,.html . && prettier \"**/*.ts\" --check",
    "format": "eslint --ext .ts,.html . --fix && prettier \"**/*.ts\" --write",
    "test": "tsc && concurrently -k -r \"json-server src/fake-api/data.json --routes src/fake-api/routes.json\" \"wtr --playwright --browsers chromium --coverage\"",
    "test:watch": "tsc && concurrently -k -r \"json-server src/fake-api/data.json --routes src/fake-api/routes.json\"  \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && npm run analyze -- --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --config web-dev-server-k8s.config.mjs --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start:local": "tsc && concurrently -k -r \"json-server src/fake-api/data.json --routes src/fake-api/routes.json\" \"wds --config web-dev-server-local.config.mjs\"",
    "start:k8s": "tsc && wds --config web-dev-server-k8s.config.mjs",
    "reinstall": "npm ci"
  },
  "dependencies": {
    "@lit-labs/router": "^0.1.1",
    "@material/mwc-button": "^0.27.0",
    "@material/mwc-list": "^0.27.0",
    "@material/mwc-tab": "^0.27.0",
    "@material/mwc-tab-bar": "^0.27.0",
    "@protobuf-ts/plugin": "^2.8.3",
    "@web/test-runner-playwright": "^0.9.0",
    "json-server": "^0.17.3",
    "lit": "^2.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.8.0",
    "@open-wc/building-rollup": "^2.2.2",
    "@open-wc/eslint-config": "^10.0.0",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@web/dev-server": "^0.1.36",
    "@web/dev-server-storybook": "^0.6.1",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.15.1",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^7.6.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "rollup": "^2.60.0",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
